<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@taglib prefix="dt" uri="/dttag"%>
<%@taglib prefix="s" uri="/struts-tags"%>
#if(${convert}=="yes")
<%@taglib prefix="cache" uri="/cacheTag"%>
#end
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://" + request.getServerName() + ":" + request.getServerPort() + path + "/";
%>
<html>
	<head>
		<base href="<%=basePath%>">
		<title>${lowerTableName}Main</title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<dt:comppath></dt:comppath>
#if(${convert}=="yes")
		<link rel="stylesheet" href="<%=path%>/css/func.cache.css" type="text/css" charset="utf-8" />
#end		
		<link rel='stylesheet' type='text/css' href='<%=request.getContextPath()%>/css/func.css'>
		<script type="text/javascript" language="JavaScript">
			$(function(){
				$('#queryBtn').click(${lowerTableName}Query);
				$('#insertBtn').click(${lowerTableName}Insert);
				$('#resetBtn').click(function(){
					document.forms['parameters'].reset();
					//xxx.selectedByIndex(-1);
				});
			});
			//查询
			function ${lowerTableName}Query()
			{
				var url = "${module}/${upperTableName}Action!showList.action";
				var parameters = $("#parameters").serialize();
				$("#resultDiv").load(url,parameters);
			}
			//打开新增页面
			function ${lowerTableName}Insert()
			{
				var url = "<%=path%>/${module}/${upperTableName}Action!prepareCreate.action";
				window.showModalDialog(url,window,'dialogWidth=800px;dialogHeight=600px;');
			}
		</script>
	</head>
	<body>
		<div class="ui-widget-content func-panel">
			<div class="ui-widget-header func-header">标题</div>
			<s:form id="parameters">
				<table class="condition" width="100%" align="center">
#foreach(${column}in${columns})
	#if($foreach.count % 3 == 1)
					<tr>
	#end
	#set($lowerColumn = $generateCode.convertFirstLetterToLowerCase($column.getColumnName()))
					<th>
						<s:label value="$column.getColumnName()"></s:label>
					</th>
	#if($column.getTypeName() == "DATE")				
					<td>
						<dt:dateInput id="_${lowerColumn}" name="pqb.queryBean.${lowerColumn}" showTime="false" buttonImage="true"></dt:dateInput>
					</td>
	#else
					<td>
						<dt:input id="_${lowerColumn}" name="pqb.queryBean.${lowerColumn}"></dt:input>
					</td>
	#end
	#if($foreach.count % 3 == 0)
					</tr>
	#end					
#end				
				</table>
			</s:form>
			<br>
			<div align="center">
			    <dt:button id="queryBtn" label="查询"></dt:button>
				<dt:button id="insertBtn" label="新增"></dt:button>
				<dt:button id="resetBtn" label="重置"></dt:button>
			</div>
			<br>
			<!--查询结果-->
			<div id="resultDiv"></div>
		</div>
	</body>
</html>